<import src="../template/template.wxml" />
<view class="container">
    <scroll-view scroll-y="true" style="height: 100vh;" bindscrolltolower="lower" scroll-top="{{top}}">
        <block wx:if="{{myPostList!=''}}">
            <view class="post-content" wx:for="{{myPostList}}" wx:key="" wx:for-item="items">
                <template is="newsListReply" data="{{items}}"></template> 
            </view>
            <view class="loading" wx:if="{{hasMore}}">
                <view class="loading-title">正在加载中</view>
                <image class="loading-img" src="/images/loading.gif"></image>
            </view>
            <view class="loading" wx:else>没有更多数据</view> 
        </block>
        <block wx:else>
            <block wx:if="{{page == 'topic'}}">
                <view class="box">您还没有发帖</view>
            </block>
            <block wx:else>
                <view class="box">您还没有发分享圈</view>
            </block>
        </block>
    </scroll-view>
</view>